<resources>

    <style name="Theme.Pantheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_pantheme</item>
        <item name="popupMenuStyle">@style/PopupMenu.Pantheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Pantheme</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Pantheme</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Pantheme</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Pantheme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_pantheme</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_pantheme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Pantheme</item>


    </style>

    <style name="ActionBar.Solid.Pantheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_pantheme</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_pantheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_pantheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Pantheme</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="ActionBar.Transparent.Pantheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_pantheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Pantheme</item>
    </style>

    <style name="PopupMenu.Pantheme" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pantheme</item>
    </style>

    <style name="DropDownListView.Pantheme" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_pantheme</item>
    </style>

    <style name="ActionBarTabStyle.Pantheme" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_pantheme</item>
    </style>

    <style name="DropDownNav.Pantheme" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_pantheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_pantheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_pantheme</item>
    </style>

    <style name="ProgressBar.Pantheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_pantheme</item>
    </style>

    <style name="ActionButton.CloseMode.Pantheme" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_pantheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Pantheme.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Pantheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Pantheme</item>
    </style>


    <!-- Text styles -->
    <style name="importantTextLarge" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="importantTextLarge.Orange.Strong" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/strong_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="importantText" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="importantText.White" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="importantText.Orange.Strong" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/strong_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="normalTextBold" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text.Orange.Strong" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/strong_orange</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textGrey" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textWhite" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textBlue" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
